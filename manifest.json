{
  "manifest_version": 3,
  "name": "Smart Form Assistant",
  "version": "1.0",
  "description": "AI-powered Google Form auto-filler with semantic question matching",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/forms/*"],
      "js": ["content/matcher.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ]
}